<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="Database_Connection_Manager.Manager">
 
    <class name="Users" table="Users">
 
        <id name="login" column="Login">
            <generator class="native"/>
        </id>
 
        <property name="password" column="Password"/>
 
        <property name="age" column="Age"/>
          
        <property name="height" column="Height"/>
 
        <property name="weight" column="Weight"/>
        
        <property name="lactoseTolerance" column="Lactose tolerance"/>
 
        <property name="intoleranceGluten" column="Intolerance to gluten"/>
        
        <property name="diet" column="Diet"/>
 
    </class>
 
</hibernate-mapping>